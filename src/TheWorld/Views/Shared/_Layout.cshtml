<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/jquery/wwwroot/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/jquery/wwwroot/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="lib/jquery/wwwroot/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />


    <title>The world - @ViewBag.Title</title>
    
</head>
<body>
    <div id="sidebar">
        <img src="~/css/img/GBSiFArG_400x400.png" alt="headshot" class="headshot" />
        <span>Sam Hastings</span>
        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li> 
        </ul>
    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid"></div>
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <button id="sidebarToggle" class="btn btn-primary">
                        <i class="fa fa-angle-left"></i>
                    </button>
                </li>
            </ul>
            <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#" class="btn btn-sm btn-info"> <i class="fa fa-save"></i>Save </a>
                </li>
                <li>
                    <a href="#" class="btn btn-sm btn-info"> <i class="fa fa-print"></i>Print </a>
                </li>
            </ul>
        </nav>
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
    <div id="footer" class="container-fluid">
        <div class="nav navbar-inverse navbar-fixed-bottom">
            <h4 class="text-center text-info"> &copy; 2017 The World Ltd.</h4>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
 <script type="text/javascript" src="~/lib/jquery/wwwroot/lib/bootstrap/dist/js/bootstrap.min.js"></script>   
<script type="text/javascript" src="~/js/JavaScript.js"> </script>
    @RenderSection("scripts", false)

</body>
</html>
